	<select id="findPagedByQuery"  resultMap="CommodityResultMap">
		SELECT
			bb.*, aa.*
		FROM
			T_COMMODITY bb
		LEFT JOIN commodity_picture_ref aa ON aa.commodity_id = bb.id
		WHERE
			NOT EXISTS (
				SELECT
					1
				FROM
					commodity_picture_ref
				WHERE
					commodity_id = aa.commodity_id
				AND picture_adress &lt; aa.picture_adress
			)
		AND bb.buyer_id IS NULL
		ORDER BY
			bb.creart_time
		LIMIT ${pageNo},${pageSize};
	</select>
	
	<select id="countCommodity"  resultType="com.cjw.project.code.vo.CountCommiditionVO">
		SELECT
			( SELECT COUNT(id) FROM t_commodity WHERE seller_id=1 AND buyer_id IS NULL ) "saleing",
			( SELECT COUNT(id) FROM t_commodity WHERE seller_id=1 AND buyer_id  &lt;&gt; NULL ) "saled",
			( SELECT COUNT(id) FROM t_solicitude WHERE user_id =1 AND type = "关注" ) "attention",
			( SELECT COUNT(id) FROM t_solicitude WHERE user_id =1 AND type = "收藏" ) "collect";
	</select>

	<!-- 某一天的会议室使用情况  -->
	<resultMap autoMapping="true" id="DayMeetingResultMap" type="com.cjw.project.code.po.MessagePO">
		<collection autoMapping="true" column="{id=id,time=time}" ofType="com.cjw.project.code.vo.UserVO" property="meeting" select="selectMeetingByBoardroom">
		</collection>
	</resultMap>
	<select id="querySituation" resultMap="DayMeetingResultMap">
		SELECT id ,name boardroom_name, #{time,jdbcType=VARCHAR} time
		FROM scf_boardroom
		WHERE state = 'ENABLE'
	</select>
	<select id="selectMeetingByBoardroom" parameterType="java.util.Map" resultType="com.cetccity.scf.meeting.vo.MeetingVo">
		SELECT * FROM scf_meeting
		WHERE boardroom_id = #{id}
		AND begin_time LIKE CONCAT(#{time,jdbcType=VARCHAR}, '%')
	</select>
